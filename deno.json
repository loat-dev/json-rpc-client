{
  "name": "@denoplayground/template",
  "version": "0.1.0",
  "exports": { },
  "tasks": {
    "run": {
      "description": "Run the main application.",
      "command": "deno run -A --check ./src/index.ts"
    },
    "run:watch": {
      "description": "Run the main application in watch mode.",
      "command": "deno run -A --check --watch ./src/index.ts"
    },
    "lint": {
      "description": "Run the linting tool.",
      "command": "deno lint"
    },
    "test": {
      "description": "Run the test suite.",
      "command": "deno test -A --check --permit-no-files --reload --doc --junit-path=\"./reports/report.xml\""
    }
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "deno.window",
      "deno.worker",
      "decorators",
      "esnext"
    ]
  },
  "test": {
    "include": [
      "./src/**/*.test.ts"
    ]
  },
  "lint": {
    "plugins": [
      "jsr:@loat-dev/lint-plugins@0.3.12/imports",
      "jsr:@loat-dev/lint-plugins@0.3.12/arrays"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "guard-for-in",
        "no-const-assign",
        "no-eval",
        "no-external-import",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-undef",
        "prefer-ascii",
        "single-var-declarator",
        "verbatim-module-syntax"
      ],
      "exclude": [
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "semiColons": true,
    "singleQuote": true,
    "trailingCommas": "never",
    "lineWidth": 120,
    "typeLiteral.separatorKind": "comma",
    "useBraces": "always"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.27",
    "@std/fmt": "jsr:@std/fmt@^1.0.9"
  }
}
